<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-6">
      <div class="d-flex justify-content-center my-5">
        <h4 class="light-gray px-3">ジャンル一覧・追加</h4>
      </div>
      <div>
        <%= form_with model: @genre, url: admin_genres_path, class: "d-flex align-items-center" do |f| %>
          <div class="pl-3"><%= f.label :name, "ジャンル名", class: "small" %></div>
          <div class="pl-5"><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %></div>
          <div class="ml-5"><%= f.submit "新規登録", class: "form-control btn btn-success ml-5" %></div>
        <% end %>
      </div>
      <table class="table mt-5">
        <thead>
          <tr class="light-gray">
            <th class="pl-5">ジャンル</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody class="genre">
          <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle"><%= genre.name %></td>
              <td></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
