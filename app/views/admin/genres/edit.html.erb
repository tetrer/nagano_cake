<div class="container">
  <div class="row">
    <div class="col-lg-7">
      <h4 class="bg-light">ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path, local: true, class: "d-flex justify-content-start align-items-center" do |f| %>
        <div class="form-group"><%= f.label :name, "ジャンル名" %></div>
        <div class="form-group ml-5"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
        <div class="form-group ml-5"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
      <% end %>
    </div>
  </div>
</div>