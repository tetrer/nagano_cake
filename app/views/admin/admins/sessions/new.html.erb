<% provide(:title, "管理者ログイン") %>
<div class="row">
  <div class="col-md-10 mx-auto">
    <h4 class="mb-5">管理者ログイン</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "public/customers/shared/error_messages", resource: resource %>
      <div class="field form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-2 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード", class: "col-sm-2 control-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-5 form-control-static" %>
      </div>
      <div class="actions col-xs-6">
        <%= f.submit "　ログイン　", class: "btn btn-primary" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name) %><br />
    <% end %>
  </div>
</div>

