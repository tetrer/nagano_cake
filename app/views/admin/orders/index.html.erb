<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>商品一覧</h2>

    <table class='table'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.customer %></td>
            <td><%= order.count %></td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <div class= "d-flex justify-content-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>
