<div class="row">
  <div class="col-md-12">
    <h2>注文履歴一覧</h2>

    <table class='table'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at, admin_order_path(order) %></td>
            <td><%= order.name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <div class= "d-flex justify-content-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>
