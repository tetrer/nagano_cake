<div class="row">
  <div class="col-md-12">
    <h2>注文詳細履歴</h2>

    <div class="field">
      <div class="col-md-3">購入者</div>
      <div class="col-md-9"><%= @order.customer %></div>
    </div>

    <div class="field">
      <div class="col-md-3">注文日</div>
      <div class="col-md-9"><%= @order.created_at %></div>
    </div>

    <div class="field">
      <div class="col-md-3">配送先</div>
      <div class="col-md-9">
        <%= @order.postal_code %> <%= @order.address %></br>
        <%= @order.name %>
      </div>
    </div>

    <div class="field">
      <div class="col-md-3">支払方法</div>
      <div class="col-md-9"><%= @order.payment_method %></div>
    </div>

    <div class="field">
      <div class="col-md-3">注文ステータス</div>
      <div class="col-md-9"><%= @order.order_status %></div>
    </div>

    <%= form_with( model: @order, url: admin_order_path, method: :patch, local:true) do |f| %>
　　　<div class="form-group">
　　　  <div class="col-md-3">注文ステータス</div>
　　　  <div class="col-md-9">
　　　    <%= f.select :order_status %>
　　　    <%= f.submit "更新", class:"btn btn-success" %>
　　　  </div>
　　　</div>
　  <% end %>
　  
　  
　  <div class="order_details-table col-md-8">
　    <table class='table'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価 (税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.product.name %></td>
              <td><%= (order_detail.product.price * 1.1).round %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= order_detail.subtotal_price %></td>
              <%= form_with( model: order_detail, url: admin_order_details_path(order_detail), method: :patch, local:true) do |f| %>
                <td>
                  <%= f.select :production_status %>
                  <%= f.submit "更新", class:"btn btn-success" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
　  </div>
　  
　  <div class="billing-amount col-md-4">
　    <div class="field">
        <div class="col-md-2">商品合計</div>
        <div class="col-md-2"><%= (@subtotal * 1.1).round %></div>
      </div>
      
      <div class="field">
        <div class="col-md-2">送料</div>
        <div class="col-md-2"><%= @order_detail.freight %></div>
      </div>
      
      <div class="field">
        <div class="col-md-2">請求金額合計</div>
        <div class="col-md-2"><%= (@subtotal * 1.1).round + @order_detail.freight %></div>
      </div>
　  </div>
　  
  </div>
</div>

