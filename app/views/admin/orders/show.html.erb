<div class= "container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-12">
      <h2>注文詳細履歴</h2>

      <div class="field">
        <div class="col-md-3">購入者</div>
        <!--会員詳細へパスを指定-->
        <div class="col-md-9"><%= link_to @order.name %></div>
      </div>

      <div class="field">
        <div class="col-md-3">注文日</div>
        <div class="col-md-9"><%= @order.created_at.strftime('%Y/%m/%d') %></div>
      </div>

      <div class="field">
        <div class="col-md-3">配送先</div>
        <div class="col-md-9">
          <%= @order.postal_code %> <%= @order.address %></br>
          <%= @order.name %>
        </div>
      </div>

      <div class="field">
        <div class="col-md-3">支払方法</div>
        <div class="col-md-9"><%= @order.payment_method %></div>
      </div>

      <div class="field">
        <div class="col-md-3">注文ステータス</div>
        <div class="col-md-9"><%= @order.order_status %></div>
      </div>

      <%= form_with( model: @order, url: admin_order_path, method: :patch, local:true) do |f| %>
    　　　<div class="form-group">
    　　　  <div class="col-md-3">注文ステータス</div>
    　　　  <div class="col-md-9">
    　　　    <%= f.select :order_status, Order.order_statuses.keys %>
    　　　    <%= f.submit "更新", class:"btn btn-success" %>
    　　　  </div>
    　　　</div>
    　  <% end %>


    　  <div class="order_details-table col-md-8">
    　    <table class='table'>
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価 (税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.product.name %></td>
                <td><%= tax_price(order_detail.product.price).to_s(:delimited) %></td>
                <td><%= order_detail.quantity %></td>
                <td><%= order_detail.subtotal_price.to_s(:delimited) %></td>
                <td>
                  <%= form_with( model: order_detail, url: admin_order_detail_path(order_detail), method: :patch, local:true) do |f| %>
                    <%= f.select :production_status, OrderDetail.production_statuses.keys %>
                    <%= f.submit "更新", class:"btn btn-success" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    　  </div>

    　  <div class="billing-amount">
    　    <div class="field">
          <div class="col-md-4">商品合計</div>
          <div class="col-md-4"><%= total_price(@order_details).to_s(:delimited) %></div>
        </div>

        <div class="field">
          <div class="col-md-4">送料</div>
          <div class="col-md-4"><%= @order.freight.to_s(:delimited) %></div>
        </div>

        <div class="field">
          <div class="col-md-4">請求金額合計</div>
          <div class="col-md-4"><%= @order.total_price.to_s(:delimited) %></div>
        </div>
    　  </div>

    </div>
  </div>
</div>
