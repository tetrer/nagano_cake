<h4 class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

<%= form_with( model:@customer, url: admin_customer_path, local:true) do |f| %>
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :kana_last_name %>　<%= f.text_field :kana_first_name %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.label :is_deleted, '有効', value:true %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '無効', value:false %>
            <%= f.radio_button :is_deleted, false %>
          </td>
        </tr>


      </tbody>
    </table>
  </div>
<%= f.submit 'Update', class: "btn btn-success"  %>
<% end %>