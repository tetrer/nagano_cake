<div class="row">
  <div class="col-2"></div>
  <div class="col mx-auto">
    <h4 class="bg-light text-center">会員一覧</h4>
  </div>
  <div class="col-8"></div>
</div>

<div class="row table-row">
  <div class="col-8 mx-auto">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td class="customer_name_link">
            <%= link_to admin_customer_path(c) do %>
              <%= c.last_name %><%= c.first_name %>
            <% end %>
          </td>
          <td><%= c.email %></td>

          <% if c.is_deleted == true %>
            <td>無効</td>
          <% else %>
            <td class="is_deleted_text">有効</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class= "d-flex justify-content-center">
    <%= paginate @customers %>
  </div>

  </div>
</div>

