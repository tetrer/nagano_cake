<h4 class="bg-light">会員一覧</h4>

<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td>
          <%= link_to admin_customer_path(c) do %>
            <%= c.last_name %>　<%= c.first_name %>
          <% end %>
        </td>
        <td><%= c.email %></td>

        <% if c.is_deleted == true %>
          <td>無効</td>
        <% else %>
          <td style="color: #00ff00">有効</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class= "d-flex justify-content-center">
  <%= paginate @customers %>
</div>