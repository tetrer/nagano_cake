<h2>注文情報確認</h2>

<div class="row">
  <div class="col-8">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>

        <% @cart_items.each do |item| %>

          <tr>
            <td><%= item.product.name %></td>
            <td><%= (item.product.price * 1.1).round %></td>
            <td>
              <%= form_with( model: @cart_items, url: cart_item_path(id: cart_item.id), local:true) do |f| %>
                <%= f.select :quantity, options_for_select([["1", "1"], ["2", "2"]], item.quantity ) %>
                <%= f.submit '送信', class: 'btn btn-success' %>
              <% end %>

            </td>
            <td><%= (item.quantity * item.product.price * 1.1).round %></td>
          </tr>

        <% end %>

      </tbody>
    </table>
  </div>
</div>