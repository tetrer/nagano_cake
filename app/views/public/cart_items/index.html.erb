<h2>注文情報確認</h2>

<div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>

      <% @cart_items.each do |item| %>

        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.price %></td>
          <td><%= item.quantity %></td>
          <td><%= item.quantity * item.product.price %></td>
        </tr>

      <% end %>

    </tbody>
  </table>
</div>