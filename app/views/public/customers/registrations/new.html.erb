<% provide(:title, "新規会員登録") %>
<div class="row">
  <div class="col-md-10 mx-auto">

    <h2 class="text-center mb-5">新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/customers/shared/error_messages", resource: resource %>

      <div class="field form-group col-xs-12">
        <%= f.label :"名前", class: "col-sm-2 control-label" %>
        <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 form-control-static" %>
        <%= f.label :"(名)", class: "col-sm-1 control-label" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
        <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :kana_last_name, autofocus: true, class: "col-sm-3 form-control-static" %>
        <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :kana_first_name, autofocus: true, class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
        <%= f.text_field :postal_code, autofocus: true, class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"住所", class: "col-sm-3 control-label" %>
        <%= f.text_field :address, autofocus: true, class: "col-sm-7 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-3 control-label" %>
        <%= f.text_field :phone_number, autofocus: true, class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-3 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"パスワード(確認用)", class: "col-sm-3 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 form-control-static" %>
      </div>

      <div class="actions col-xs-12 text-center">
        <%= f.submit "新規登録",class: 'col-sm-3 btn btn-success my-3' %>
      </div>
    <% end %>

    <div class="col-xs-9 text-center">
      <h2 class="mb-3">既に登録済みの方</h2>
      <p class="new-link"><%= render "public/customers/shared/links" %>からログインしてください。</p>
    </div>
  </div>
</div>
