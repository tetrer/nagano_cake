<% provide(:title, "ログイン") %>
<div class="row">
  <div class="col-md-10 mx-auto">
    <h4 class="text-center mb-5">ログイン</h4>
    <% if flash[:error] %>
      <span class="bg-danger rounded text-light p-1"><%= flash[:error] %></span>
    <% end %>
    <h4>会員の方はこちらからログイン</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "public/customers/shared/error_messages", resource: resource %>
      <div class="field form-group col-xs-12">
        <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"パスワード", class: "col-sm-3 control-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-3 form-control-static" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="col-xs-6">
        <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "btn-link" %>
      </div>
      <div class="actions col-xs-9">
        <%= f.submit "ログイン", class: "btn btn-primary col-xs-7 my-3" %>
      </div>

    <% end %>
    <div class="col-xs-9">
      <h4 class="my-3">会員登録がお済みではない方</h4>
      <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
    </div>
  </div>
</div>
