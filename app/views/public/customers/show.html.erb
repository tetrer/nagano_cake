<div class="row">
  <div class="col-2"></div>
  <div class="col">
    <h4 class="bg-light mx-auto">マイページ</h4>
  </div>
  <div class="col-8"></div>
</div>


<div class="row">
  <div class="col-2"></div>
  <div class="sub_title">
    <h4>登録情報　<%= link_to '編集する', edit_customers_path(@customer.id), class: 'btn btn-outline-success' %></h4>
  </div>
</div>


<div class="row">
  <div class="col-2"></div>
  <div>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.kana_last_name %>　<%= @customer.kana_first_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-2"></div>
</div>

<div class="row">
  <div class="col-2"></div>
  <div class="sub_title">
    <h4>配送先　<%= link_to '一覧を見る', addresses_path, class: 'btn btn-outline-primary' %></h4>
  </div>
</div>

<div class="row">
  <div class="col-2"></div>
  <div class="sub_title">
    <h4>注文履歴　<%= link_to '一覧を見る', orders_path, class: 'btn btn-outline-primary' %></h4>
  </div>
</div>

