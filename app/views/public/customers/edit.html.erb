<h2>会員情報編集</h2>

<div>
  <%= form_with( model:@customer, url: customers_path, local:true) do |f| %>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name, autofocus: true, id:"inputName", class: "form-control" %></td>
          <td><%= f.text_field :first_name, autofocus: true, id:"inputName", class: "form-control" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :kana_last_name, autofocus: true, id:"inputName", class: "form-control" %></td>
          <td><%= f.text_field :kana_first_name, autofocus: true, id:"inputName", class: "form-control" %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code, autofocus: true, id:"inputName", class: "form-control" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, autofocus: true, id:"inputName", class: "form-control" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number, autofocus: true, id:"inputName", class: "form-control" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :email, autofocus: true, id:"inputName", class: "form-control" %></td>
        </tr>
      </tbody>
    </table>

    <%= f.submit "編集内容を保存", class: "btn btn-success" %>

  <% end %>
</div>