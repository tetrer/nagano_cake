<div class= "container">
  <div class= "row">
    <div class= "col-md-5 col-md-offset-1">
      <% if @product.is_valid == true %>
        <%= attachment_image_tag(@product, :image, size: "400x300", format: 'jpeg' ,fallback: "cake.jpg") %>
      <% else %>
        <div class="sold-out-lg">
          <%= attachment_image_tag(@product, :image, size: "400x300", format: 'jpeg' ,fallback: "cake.jpg") %>
          <p>Sold out</p>
        </div>
      <% end %>
    </div>

    <div class= "col-md-6">
      <h2><%= @product.name %></h2></br>

      <div class="product-description">
        <%= @product.description %><br>
      </div>

      <div class="product-price">
        ¥ <%= tax_price(@product.price) %> (税込)
      </div>
      <% if customer_signed_in? %>
    　　　<%= form_with( model: [@product, @cart_item], url: cart_items_path, method: :post, local:true) do |f| %>
    　　 　  <div class="form-group">
    　　　    <%= f.hidden_field :product_id, value: @product.id %>
    　　　    <% if @product.is_valid == true %>
    　　　    <%= f.select :quantity, options_for_select(1..10), include_blank: "個数選択" %>
    　　　      <%= f.submit "カートに入れる", class:"btn btn-success" %>
           <% else %>
             <p class="text-muted">こちらの商品は、只今売り切れです。</p>
           <% end %>
    　　 　  </div>
    　　　<% end %>
　　　<% end %>
    </div>
  </div>
</div>