<div class= "container">
  <div class= "row">
    <div class= "col-md-5 col-md-offset-1">
      <%= attachment_image_tag(@product, :image, size: "400x300", format: 'jpeg' ,fallback: "cake.jpg") %>
    </div>

    <div class= "col-md-6">
      <h2><%= @product.name %></h2></br>

      <div class="product-description">
        <%= @product.description %><br>
      </div>

      <div class="product-price">
        ¥ <%= (@product.price * 1.1).round %> (税込)
      </div>

　　　<%= form_with model: @product, url:, local:true do |f| %>
　　　  <div class="form-group">
　　　    <%= f.select :products, options_for_select(1..10), include_blank: "個数選択" %>
　　　    <%= f.submit "カートに入れる", class:"btn btn-success" %>
　　　  </div>
　　　<% end %>
    </div>
  </div>
</div>